# Sample Environment Variables for Marketing Agents API
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SETTINGS (Original - needed for Render deployment)
# =============================================================================
SENDER_EMAIL=your-email@example.com
SENDER_PASSWORD=your-email-password
ANTHROPIC_API_KEY=your-anthropic-api-key
AGENT_STORAGE=./agents_storage.db
DATABASE_URL=sqlite:///./agents.db
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://your-frontend-domain.com"]

# =============================================================================
# OPTIONAL FEATURE FLAGS (Enhanced Error Handling)
# Uncomment and modify these to customize behavior
# =============================================================================

# Enable/disable enhanced validation features
# ENABLE_ENHANCED_VALIDATION=true
# ENABLE_DTO_VALIDATION=true
# ENABLE_ADVANCED_SECURITY=true
# ENABLE_AI_VALIDATION=true
# ENABLE_RATE_LIMITING=true
# ENABLE_REQUEST_LOGGING=true

# Validation limits
# MAX_REQUEST_SIZE=10485760
# MAX_PROMPT_LENGTH=8000
# MIN_PROMPT_LENGTH=10
# MAX_AGENT_NAME_LENGTH=255
# MAX_DESCRIPTION_LENGTH=1000

# Rate limiting
# DEFAULT_RATE_LIMIT=100
# BURST_LIMIT=10
# AI_EXECUTION_RATE_LIMIT=20

# Performance settings
# CACHE_TTL=300
# CONNECTION_POOL_SIZE=5

# Logging
# LOG_LEVEL=INFO

# AI settings
# AI_MODEL_TIMEOUT=30
# AI_MAX_RETRIES=3

# =============================================================================
# ENVIRONMENT DETECTION (Optional)
# =============================================================================
# ENVIRONMENT=development  # development, production, testing
# RENDER=true  # Automatically set by Render
