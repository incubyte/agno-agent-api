# Marketing Agents API - Unified Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./agents.db
# For PostgreSQL: postgresql://user:password@localhost/agents_db
# For MySQL: mysql://user:password@localhost/agents_db

# =============================================================================
# FEATURE FLAGS - Enable/disable functionality
# =============================================================================
ENABLE_ENHANCED_VALIDATION=true
ENABLE_DTO_VALIDATION=true
ENABLE_ADVANCED_SECURITY=true
ENABLE_AI_VALIDATION=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# API BEHAVIOR
# =============================================================================
DEFAULT_API_VERSION=v1
SUPPORT_LEGACY_FORMAT=true
AUTO_ENHANCE_LARGE_REQUESTS=true
MAX_LEGACY_PAGE_SIZE=50

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=change-this-in-production-to-a-secure-random-string
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# RATE LIMITING
# =============================================================================
DEFAULT_RATE_LIMIT=100
BURST_LIMIT=10
AI_EXECUTION_RATE_LIMIT=20

# =============================================================================
# VALIDATION LIMITS
# =============================================================================
MAX_REQUEST_SIZE=10485760
MAX_PROMPT_LENGTH=8000
MIN_PROMPT_LENGTH=10
MAX_AGENT_NAME_LENGTH=255
MAX_DESCRIPTION_LENGTH=1000

# =============================================================================
# PERFORMANCE
# =============================================================================
CACHE_TTL=300
CONNECTION_POOL_SIZE=10

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# AI SETTINGS
# =============================================================================
AI_MODEL_TIMEOUT=30
AI_MAX_RETRIES=3

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
# Options: development, production, testing
